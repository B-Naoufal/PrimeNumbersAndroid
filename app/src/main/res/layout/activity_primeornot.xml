<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_primeornot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.clubhayat.primenumbers.Primeornot"
    android:background="@drawable/backcalcul">

    <TextView
        android:text="Check A Number if it's prime or not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textAlignment="center"
        android:fontFamily="casual" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/editText"
        android:hint="Put your number  here"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="160dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yeapp"
        android:id="@+id/yeap"
        android:layout_weight="1"
        android:layout_below="@+id/textView"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yeap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:fontFamily="monospace"
        android:text="Empty Entry !"
        android:textAlignment="center"
        android:textColor="@color/textolor"
        android:textColorLink="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

</RelativeLayout>
